#!/bin/bash

mkdir -p exercises/$1

echo "-----------------------------------------------------------"
echo "---------------------    MAKE    --------------------------"
echo "-----------------------------------------------------------"
make clean 
make 



echo "-----------------------------------------------------------"
echo "---------------------    CLEAN    -------------------------"
echo "-----------------------------------------------------------"
rm -r exercises/$1/$1.asm
rm -r exercises/$1/$1.o


echo "-----------------------------------------------------------"
echo "---------------------    ACSE    --------------------------"
echo "-----------------------------------------------------------"
cp $1.src 
acse exercises/$1/$1.src exercises/$1/$1.asm 


echo "-----------------------------------------------------------"
echo "---------------------    ASM     --------------------------"
echo "-----------------------------------------------------------"
asm exercises/$1/$1.asm exercises/$1/$1.o 

echo "-----------------------------------------------------------"
echo "---------------------   run   -----------------------------"
echo "-----------------------------------------------------------"
mace exercises/$1/$1.o 